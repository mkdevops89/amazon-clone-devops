Vagrant.configure("2") do |config|
  # Use Ubuntu 20.04 LTS Box
  config.vm.box = "ubuntu/focal64"
  
  # Assign a private IP for easy access (e.g., http://192.168.33.10:3000)
  config.vm.network "private_network", ip: "192.168.33.10"

  # Customize VM Resources (Memory/CPU)
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "4096"
    vb.cpus = 2
  end

  # Provision using Ansible
  config.vm.provision "shell", path: "bootstrap.sh"

  # Mount the project root directory to /opt/amazonlikeapp
  config.vm.synced_folder "../../", "/opt/amazonlikeapp"

  # Ansible Provisioner (Commented out for Shell-only usage)
  # config.vm.provision "ansible" do |ansible|
  #   ansible.playbook = "ops/ansible/playbook.yml"
  # end
end
